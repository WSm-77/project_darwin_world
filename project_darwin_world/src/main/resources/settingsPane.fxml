    <children>
        <Accordion>
            <panes>
                <TitledPane animated="false" text="Simulation controls">
                    <content>
                        <GridPane alignment="CENTER" prefHeight="110.0" prefWidth="284.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="147.0" minWidth="103.0" prefWidth="103.0" />
