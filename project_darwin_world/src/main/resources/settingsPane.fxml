                           <children>
                              <Slider fx:id="refreshTimeSlider" blockIncrement="100.0" majorTickUnit="990.0" max="1000.0" min="10.0" minorTickCount="10" prefHeight="21.0" prefWidth="133.0" showTickLabels="true" showTickMarks="true" value="500.0" />
