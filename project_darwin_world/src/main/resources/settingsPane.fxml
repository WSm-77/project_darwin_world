                        <Label fx:id="trackedDescendantsCount" text="-" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="CENTER" />
                        <Label text="Days alive" wrapText="true" GridPane.rowIndex="7" />
                        <Label fx:id="trackedDaysAlive" text="-" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.valignment="CENTER" />
