                        <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
                        <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
                        <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
                        <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
                        <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
                        <RowConstraints valignment="CENTER" vgrow="ALWAYS" />
                     </rowConstraints>
                     <children>
                        <Label text="Track animal" GridPane.halignment="LEFT" GridPane.valignment="CENTER" />
                        <Button fx:id="trackAniamlButton" mnemonicParsing="false" onAction="#onTrackAnimalButtonClick" prefHeight="26.0" prefWidth="71.0" text="Choose" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
